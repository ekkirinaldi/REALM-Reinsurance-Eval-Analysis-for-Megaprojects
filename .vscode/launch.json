{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "app.py",  // Replace with your Streamlit app file name
                "--server.port",
                "8501",  // Optional: Change if needed
                "--server.enableCORS",
                "false"  // Optional: Disable CORS if necessary
            ],
            "justMyCode": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/chat",
            "python": "${workspaceFolder}/chat/dev/bin/python"  
        }
    ]
}
